{
  "name": "react-universal-boilerplate",
  "version": "1.0.0",
  "description": "A universal React app",
  "main": "index.js",
  "scripts": {
    "start": "webpack --config ./tools/webpack.config.js && nodemon src/server.js --exec babel-node",
    "build": "NODE_ENV=production webpack -p --config ./tools/webpack.config.js && NODE_ENV=production babel src -d dist",
    "production": "rm -rf dist && npm run build && NODE_ENV=production node dist/server.js"
  },
  "author": "Evan Salzbrenner",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "ejs": "^2.5.2",
    "express": "^4.14.0",
    "foundation-sites": "^6.2.4",
    "jquery": "~2.2.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-motion": "^0.4.5",
    "react-router": "^2.8.1",
    "transform-loader": "^0.2.3",
    "webpack": "^1.13.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "babel-loader": "^6.2.5",
    "babel-plugin-module-resolver": "^2.3.0",
    "babel-preset-react-hmre": "^1.1.1",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.25.0",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-import-resolver-babel-module": "^2.2.1",
    "eslint-loader": "^1.6.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-mocha": "^4.7.0",
    "eslint-plugin-react": "^6.4.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "gsap": "^1.19.0",
    "node-sass": "^3.10.1",
    "nodemon": "^1.11.0",
    "pixi.js": "^4.2.2",
    "postcss-loader": "^1.0.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "require-dir": "^0.3.1",
    "sass-loader": "^4.0.2",
    "scripts-loader": "^0.1.3",
    "scrollmagic": "^2.0.5",
    "style-loader": "^0.13.1",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.0"
  }
}
